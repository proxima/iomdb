<p>
  <b>Name:</b>
  <%=h @spell.name %>
</p>

<p>
  <b>Base cost:</b>
  <%=h @spell.base_cost %>
</p>

<h2>Guilds:</h2>
<% for spec in @train_specs %>
  <% guild = Guild.find_by_id(spec.guild_id) %>
  <b><%= link_to(guild.name, guild) %></b> - <%= render :partial => 'spell_train_specs/view', :object => spec %>
<% end %>

<h2>Equipment Pieces:</h2>
<table id="eq_piece_table">
  <tr id="eq_piece_div">
    <th>Name</th>
    <th>Class</th>
    <th>Stats</th>
    <th>Tp Value</th>
    <th>Location</th>
    <th></th>
    <th></th>
  </tr>
  <% for mod in @eq_mods %>
    <% piece = EquipmentPiece.find_by_id(mod.equipment_piece_id) %>
    <%= render :partial => 'equipment_pieces/view', :object => piece %>
  <% end %>
</table>

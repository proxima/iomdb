<p>
  <b>Name:</b>
  <%=h @skill.name %>
</p>

<p>
  <b>Base cost:</b>
  <%=h @skill.base_cost %>
</p>

<h2>Guilds:</h2>
<% for spec in @train_specs %>
  <% guild = Guild.find_by_id(spec.guild_id) %>
  <b><%= link_to(guild.name, guild) %></b> - <%= render :partial => 'skill_train_specs/view', :object => spec %>
<% end %>

<h2>Equipment Pieces:</h2>
<table>
<% for mod in @eq_mods %>
  <% piece = EquipmentPiece.find_by_id(mod.equipment_piece_id) %>
  <tr><td><b><%= link_to(piece.name, piece) %></b></td><td><%= mod.value %></td></tr>
<% end %>
</table>

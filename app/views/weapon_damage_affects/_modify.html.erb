<% form_for(@weapon_damage_affect) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label 'Equipment Piece' %><br />
    <%= f.select :equipment_piece_id, local_assigns[:equipment_pieces].map{|c| [c.name, c.id]} %>
  </p>

  <p>
    <%= f.label 'Damage Type' %><br />
    <%= f.select :damage_type_id, local_assigns[:damage_types].map{|c| [c.name, c.id]} %>
  </p>

  <p>
    <%= f.label 'Damage Level' %><br />
    <%= f.select :weapon_damage_level_id, local_assigns[:weapon_damage_levels].map{|c| [c.name, c.id]} %>
  </p>

  <p>
    <%= f.submit 'Done' %>
  </p>

<% end %>


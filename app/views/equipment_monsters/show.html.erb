<h1><%= @equipment_monster.name %></h1>
<h2>Strategy:</h2>
<% if @equipment_monster.equipment_mob_strategy %>
  <%= render :partial => 'equipment_mob_strategies/view', :object => @equipment_monster.equipment_mob_strategy %>
<% else %>
  <%= link_to 'Create one', :controller => 'equipment_mob_strategies', :action => 'new', :equipment_monster_id => @equipment_monster.id %>
<% end %>
<h2>Equipment:</h2>
<table id="eq_piece_table">
  <tr id="eq_piece_div">
    <th>Name</th>
    <th>Class</th>
    <th>Stats</th>
    <th>Tp Value</th>
    <th>Location</th>
    <th></th>
    <th></th>
  </tr>
  <%= render :partial => 'equipment_pieces/view', :collection => @eq_pieces %>
</table>
<br>
<% if logged_in? %>
  <%= link_to 'Edit', edit_equipment_monster_path(@equipment_monster) %><br>
  <p>
    <b>Edit History</b><br>
    <% @versions.reverse.each do |version| %>
      Version <%= version.version %> Updated: <%= version.updated_at %> <%= link_to '(restore)', restore_equipment_monster_url(:equipment_monster_id => @equipment_monster.id, :version_id => version.version) %><br>
    <% end %>
  </p>
<% end %>


<% form_for(modify) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :equipment_monster_id %><br />
    <%= f.select :equipment_monster_id, local_assigns[:eq_mobs].map{|c| [c.name, c.id]} %>
  </p>

  <p>
    <%= f.label "Armor Class" %><br />
    <%= f.text_field :klass %>
  </p>

  <p>
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </p>

  <p>
    <%= f.label :special %><br />
    <%= f.text_field :special %>
  </p>

  <p>
    <%= f.label :tp_value %><br />
    <%= f.text_field :tp_value %>
  </p>

  <p>
    <%= f.submit "Done" %>
  </p>

<% end %>

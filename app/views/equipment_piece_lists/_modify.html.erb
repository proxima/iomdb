<% form_for(modify) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :owner %><br />
    <%= f.select :admin_user_id, local_assigns[:admin_users].map{|c| [c.login, c.id]} %>
  </p>

  <p>
    <%= f.label :list_type %><br>
    <%= f.select :equipment_piece_list_type_id, local_assigns[:list_types].map{|c| [c.name, c.id]} %>
  </p>

  <p>
    <%= f.label :parchment %><br />
    <%= f.text_area :parchment %><br />
  </p>  

  <p>
    <%= f.label :gab %><br>
    <%= f.text_area :gab %><br>
  </p>

  <p>
    <%= f.submit "Done" %>
  </p>

<% end %>

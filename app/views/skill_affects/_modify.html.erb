<% form_for(modify) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :equipment_piece_id %><br>
    <%= f.select :equipment_piece_id, local_assigns[:eq_pieces].map{|c| [c.name, c.id]} %>
  </p>

  <p>
    <%= f.label :skill_id %><br>
    <%= f.select :skill_id, local_assigns[:skills].map{|c| [c.name, c.id]} %>
  </p>

  <p>
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </p>

  <p>
    <%= f.submit "Done" %>
  </p>

<% end %>
